extends ../layouts/commons.pug
block content
  .container
    div.form-inline.pt-2
      label.mb-2.mr-sm-2.form-inline Cập nhật dữ liệu:
      select(style="width: 400px").form-control.mb-2.mr-sm-2#sectionChooser
        option(value="khoa") Khoa
        option(value="bomon") Bộ môn
        option(value="namhoc") Năm học
        option(value="hocki") Học kì
        option(value="monhoc") Môn học
        option(value="hedaotao") Hệ đào tạo
        option(value="bachoc") Bậc học
        option(value="nganhhoc") Ngành học
        option(value="lop") Lớp

    div.panel#khoa
      form(action="/data/updateData", method="POST").was-validated
        div.form-group
          label(for="makhoa") Mã khoa:
          input(type="text", name="makhoa", placeholder='Nhập mã khoa', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        div.form-group
          label(for="tenkhoa") Tên khoa:
          input(type="text", name="tenkhoa", placeholder='Nhập tên khoa', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        button.btn.btn-primary Thêm khoa 

    div.panel#bomon
      form(action="/data/updateData", method="POST").was-validated
        div.form-group
          label(for="mabm") Mã bộ môn:
          input(type="text", name="mabm", placeholder='Nhập mã bộ môn', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        div.form-group
          label(for="tenbm") Tên bộ môn:
          input(type="text", name="tenbm", placeholder='Nhập tên bộ môn', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        div.form-group
          label(for="knmakhoa") Tên khoa:
          select(name="knmakhoa").form-control.mb-2.mr-sm-2
            if khoa
              each khoas in khoa
                option(value= khoas.makhoa)= khoas.tenkhoa
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        button.btn.btn-primary Thêm bộ môn     

    div.panel#namhoc
      form(action="/data/updateData", method="POST").was-validated
        div.form-group
          label(for="manh") Mã năm học:
          input(type="text", name="manh", placeholder='Nhập mã năm học', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        div.form-group
          label(for="namhoc") Năm học:
          input(type="text", name="namhoc", placeholder='Nhập năm học', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        button.btn.btn-primary Thêm năm học

    div.panel#hocki
      form(action="/data/updateData", method="POST").was-validated
        div.form-group
          label(for="mahk") Mã học kì:
          input(type="text", name="mahk", placeholder='Nhập mã học kì', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        div.form-group
          label(for="tenhk") Tên học kì:
          input(type="text", name="tenhk", placeholder='Nhập tên học kì', required).form-control
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        div.form-group
          label(for="knmanh") Năm học:
          select(name="knmanh").form-control.mb-2.mr-sm-2
            if namhoc
              each namhocs in namhoc
                option(value= namhocs.manh)= namhocs.namhoc
          div.valid-feedback Tốt.
          div.invalid-feedback Xin điền trường này
        button.btn.btn-primary Thêm học kì

    div.panel#monhoc
      form(action="/data/updateData", method="POST").was-validated
        div.form-group
          label(for="mamh") Mã môn học:
          input(type="text", name="mamh", placeholder='Nhập mã môn học', required).form-control
