  body
    #two-navbar.two-navbar
      div(style='background: rgba(255, 255, 255, 0.7);')
        .container
          nav.navbar.navbar-expand.mx-auto
            ul.navbar-nav.align-items-center
              li.nav-item
                a.navbar-brand(href='#')
                  img(src='/image/logo-light.png', alt='logo')
            ul.navbar-nav.ml-auto.align-items-center
              if !user
                li.nav-item
                  a.user-login(href="/users/login").nav-link.btn.btn-light Đăng Nhập  
      nav.navbar.navbar-expand-md.navbar-dark(style='background: rgba(202, 201, 201, 0.7); ')
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
          span.navbar-toggler-icon
        ul#collapsibleNavbar.navbar-nav.collapse.navbar-collapse.justify-content-center
          li.nav-item.dropdown
            a.nav-link(href='/') Trang Ch&#x1EE7;
          li.nav-item.dropdown
            a#navbardrop.nav-link.dropdown-toggle(href='#', data-toggle='dropdown') Giới thiệu
            ul.dropdown-menu.animated.fadeIn
              li
                .row(style='width: 250px;')
                  ul.list-unstyled.col-md-12
                    li
                      a(href='#') Tổng quan
                    li
                      a(href='#') Đề tài
          if user
            li.nav-item.dropdown
              a.nav-link(href='/users/profile/'+ user.magv) Đề cương          
          if user
            if user[0].role == "qtv"
              li.nav-item.dropdown
                a#navbardrop.nav-link.dropdown-toggle(data-toggle='dropdown', href='/users/profile/'+ user.magv) Quản trị viên
                ul.dropdown-menu.animated.fadeIn
                  li
                    .row(style='width: 250px;')
                      ul.list-unstyled.col-md-12
                        li
                          a(href='/users/signup') Tạo tài khoản
                        li
                          a(href='/users/userList') Danh sách tài khoản
                        li
                          a(href='/data/updateData') Cập nhật dữ liệu
                        li
                          a(href='#') Sinh Viên
          if user
            li.nav-item.dropdown
              a#navbardrop.nav-link.dropdown-toggle(data-toggle='dropdown', href='/users/profile/'+ user.magv) Cá Nhân
              ul.dropdown-menu.animated.fadeIn
                li
                  .row(style='width: 180px;')
                    ul.list-unstyled.col-md-12
                      li
                        a(href='#') Đổi mật khẩu
                      li
                        a(href='/users/logout') Đăng xuất
