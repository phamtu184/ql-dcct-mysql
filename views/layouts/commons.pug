    #two-navbar.two-navbar
      div(style='background: rgba(255, 255, 255, 0.7);')
        .container
          nav.navbar.navbar-expand.mx-auto
            ul.navbar-nav.align-items-center
              li.nav-item
                a.navbar-brand(href='#')
                  img(src='/image/logo-light.png', alt='logo')  
      nav.navbar.navbar-expand-md.navbar-dark.stylish-color(style='background: rgba(202, 201, 201, 0.7); ')
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent-333', aria-controls='navbarSupportedContent-333', aria-expanded='false', aria-label='Toggle navigation')
