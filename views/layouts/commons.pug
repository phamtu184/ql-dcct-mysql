html
  head
    meta(charset='UTF-8')
    title Quản lý đề cương chi tiết
    link(rel='icon', href='img/mdb-favicon.ico', type='image/x-icon')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.11.2/css/all.css')
    link(rel='stylesheet', href='/MDB-Free/css/bootstrap.min.css')
    link(rel='stylesheet', href='/MDB-Free/css/mdb.min.css')
    link(rel='stylesheet', href='/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css')

  body
    #two-navbar.two-navbar
      div(style='background: rgba(255, 255, 255, 0.7);')
        .container
          nav.navbar.navbar-expand.mx-auto
            ul.navbar-nav.align-items-center
              li.nav-item
                a.navbar-brand(href='#')
                  img(src='/image/logo-light.png', alt='logo')  
      nav.navbar.navbar-expand-md.navbar-light.bg-light(style='background: rgba(202, 201, 201, 0.7); ')
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
          span.navbar-toggler-icon
        ul#collapsibleNavbar.navbar-nav.collapse.navbar-collapse.justify-content-center
          li.nav-item.dropdown
            a.nav-link(href='/') Trang Ch&#x1EE7;                   
          if user
            li.nav-item.dropdown
              a.nav-link(href='/file/myFile/') Đề cương   
          if user
            if user[0].role == "Quản trị viên" || user[0].role == "Lãnh đạo khoa"
              li.nav-item.dropdown
                a.nav-link(href='/file/findFile/') Thống kê     
          if user                 
            if user[0].role == "Quản trị viên"
              li.nav-item.dropdown
                a#navbardrop.nav-link.dropdown-toggle(data-toggle='dropdown') Quản trị viên
                ul.dropdown-menu.animated.fadeIn
                  li
                    .row(style='width: 260px;')
                      ul.list-unstyled.col-md-12
                        li
                          a(href='/users/signup') Tạo tài khoản
                        li
                          a(href='/users/userList') Danh sách tài khoản
                        li
                          a(href='/users/changeuser') Sửa tài khoản                      
                        li
                          a(href='/data/updateData') Cập nhật dữ liệu
                        li
                          a(href='/data/viewData') Xem dữ liệu 
          if user
            li.nav-item
              a.nav-link.btn.btn-light(href='/users/logout') Đăng xuất
          if !user
            li.nav-item
              a.nav-link.btn.btn-light(href='/users/login') Đăng nhập            
    div(style='margin-top: 164px')
                   
    block content
  
  script(type='text/javascript', src='/MDB-Free/js/popper.min.js')
  script(type='text/javascript', src='/MDB-Free/js/bootstrap.min.js')
  script(type='text/javascript', src='/MDB-Free/js/mdb.min.js')
  script(src='/script/script.js')
  script(src='/script/fillerPanel.js')
