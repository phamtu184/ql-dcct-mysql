extends ../layouts/commons.pug
block content
  .container.mt-5
    .row
      .col-md-6.ml-auto.mr-auto
        .card.bg-custom-1.mb-5
          h3.card-header Đăng nhập
          .card-body
            .row
              .col-md-8.ml-auto.mr-auto
                if errors
                  each error in errors
                    .alert.alert-danger= error                  
                form.was-validated(action='/users/login', method="POST")
                  .form-group
                    label(for="email") Email:
                    .input-group-prepend
                      input(type="text", name="email", placeholder='Nhập email', required).form-control
                      .input-group-text @tvu.edu.vn
                  .form-group
                    label(for='password') Mật khẩu:
                    input#password.form-control(type='password', placeholder='Nhập mật khẩu', name='password', required='')
                  button.btn.btn-primary(type='submit') Đăng nhập   