extends ../layouts/commons.pug
block content
  .container
    h2.d-flex.justify-content-center Tạo tài khoản
    if errors
      each error in errors
        .alert.alert-danger= error
    form(action="/users/signup", method="POST").was-validated
      .form-row.mt-2
        .col-3
          label(for="magv") Mã giảng viên:
          input(type="text", name="magv", placeholder='Nhập mã giảng viên', required).form-control       
        .col
          label(for="tengv") Họ và tên giảng viên:
          input(type="text", name="tengv", placeholder='Nhập họ và tên', required).form-control  
      .form-row.mt-2     
        .col-4
          label(for="email") Email:
          .input-group-prepend
            input(type="text", name="email", placeholder='Nhập email', required).form-control
            .input-group-text @tvu.edu.vn
        .col
          label(for="sdt") Số điện thoại:
          input(type="text", name="sdt", placeholder='Nhập số điện thoại', required).form-control      
      .form-row.mt-2
        .col
          label(for="password") Mật khẩu:
          input(type="password", name="password", placeholder='Nhập mật khẩu', required).form-control
        .col
          label(for="passwordConf") Xác nhận mật khẩu:
          input(type="password", name="passwordConf", placeholder='Xác nhận mật khẩu', required).form-control
      .form-row.mt-2
        .col
          label(for="knmabm") Tên bộ môn:
          select(name="knmabm").form-control.mb-2.mr-sm-2
            if bomon
              each bomons in bomon
                option(value= bomons.mabm)= bomons.tenbm
        .col
          label(for="role") Vai Trò:
          select(name="role").form-control
            option(value="user") User
            option(value="admin") Admin
      button.btn.btn-primary.mt-2 Đăng kí

  