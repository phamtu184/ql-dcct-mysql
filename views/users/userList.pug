extends ../layouts/commons.pug
block content
  .container
    button.btn.btn-primary.mr-2(type='button', data-toggle='modal', data-target='#deleteModal')
      | Xóa tài khoản
    // The Modal
    #deleteModal.modal.fade
      .modal-dialog.modal-md
        .modal-content
          // Modal Header
          .modal-header
            h4.modal-title Xóa tài khoản
            button.close(type='button', data-dismiss='modal') &times;
          // Modal body
          .modal-body
            form(action="/users/userList", method="POST")
              div.form-group.form-inline   
                label(for="emailToDelete").mb-2.mr-sm-2 Tên đăng nhập muốn xóa:
                select(name="emailToDelete").form-control.mb-2.mr-sm-2
                  each user in users
                    option(value= user.email)= user.email
              button.btn.btn-primary.mb-2.mr-sm-2 Xóa
              button.btn.btn-secondary(type='button', data-dismiss='modal', style='float: right') Đóng
    button.btn.btn-primary.mr-2(type='button', data-toggle='modal', data-target='#changeRoleModal')
      | Thay đổi vai trò
    // The Modal
    #changeRoleModal.modal.fade
      .modal-dialog.modal-md
        .modal-content
          // Modal Header
          .modal-header
            h4.modal-title Thay đổi vai trò
            button.close(type='button', data-dismiss='modal') &times;
          // Modal body
          .modal-body
            form(action="/users/userList", method="POST")
              div.form-group.form-inline
                label(for="emailToChangeRole").mb-2.mr-sm-2 Tên đăng nhập:
                select(name="emailToChangeRole").form-control.mb-2.mr-sm-2
                  each user in users
                    option(value= user.email)= user.email
              div.form-group.form-inline  
                label(for="roleToChange").mb-2.mr-sm-2 Vai trò:
                select(name="roleToChange").form-control.mb-2.mr-sm-2
                  option(value="user") User
                  option(value="admin") Admin
              button.btn.btn-primary.mb-2.mr-sm-2 Xác nhận
              button.btn.btn-secondary(type='button', data-dismiss='modal', style='float: right') Đóng
    table.table.mt-4
      thead
        tr
          th Tên giáo viên
          th sdt
          th Email
          th Vai trò
          th Action
      each user in users
        tr
          td= user.tengv
          td= user.sdt
          td= user.email
          td= user.role
          td
            a(href= "/users/profile/" + user.magv).btn.btn-info View