extends ../layouts/commons.pug
block content
  .container
    if errors
      each error in errors
        .alert.alert-danger= error
    form.was-validated(action='/users/login', method="POST")
      .form-group
        label(for='email') Tên đăng nhập:
        input#email.form-control(type='text', placeholder='Enter email', name='email', required='')
        .valid-feedback Tốt.
        .invalid-feedback Vui lòng điền vào trường này.
      .form-group
        label(for='password') Password:
        input#password.form-control(type='password', placeholder='Enter password', name='password', required='')
        .valid-feedback Tốt.
        .invalid-feedback Vui lòng điền vào trường này.
      button.btn.btn-primary(type='submit') Đăng nhập